{
  "name": "pkspot",
  "version": "1.0.3",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "serve": "ng serve",
    "serve:ssr": "node dist/pkspot/server/server.mjs",
    "dev": "ng serve --watch --configuration=dev",
    "build": "ng build && node copy-proxy-server.js",
    "build:dev": "ng build --configuration=dev && node copy-proxy-server.js",
    "build:prod": "ng build --configuration=production && node copy-proxy-server.js",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "deploy:rules:firestore": "npx firebase deploy --only firestore:rules",
    "deploy:rules:storage": "npx firebase deploy --only storage:rules",
    "deploy:test:rules": "npx firebase use test && npx firebase deploy --only firestore:rules",
    "deploy:prod:rules": "npx firebase use prod && npx firebase deploy --only firestore:rules",
    "deploy:functions": "cd ./functions && npm run build && npx firebase deploy --only functions && cd ..",
    "deploy:test:functions": "npx firebase use test && cd ./functions && npm run build && npx firebase deploy --only functions && cd ..",
    "deploy:prod:functions": "npx firebase use prod && cd ./functions && npm run build && npx firebase deploy --only functions && cd .."
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.3.0",
    "@angular/cdk": "^20.0.5",
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/fire": "^20.0.1",
    "@angular/forms": "^20.3.0",
    "@angular/google-maps": "^20.0.5",
    "@angular/localize": "^20.3.0",
    "@angular/material": "^20.0.5",
    "@angular/platform-browser": "^20.3.0",
    "@angular/platform-browser-dynamic": "^20.3.0",
    "@angular/platform-server": "^20.3.0",
    "@angular/router": "^20.3.0",
    "@angular/service-worker": "^20.3.0",
    "@angular/ssr": "^20.3.6",
    "@videogular/ngx-videogular": "^8.0.0",
    "bootstrap": "^5.3.0",
    "buffer": "^6.0.3",
    "compression": "^1.8.0",
    "express": "^4.18.2",
    "firebase": "^11.10.0",
    "rxjs": "^7.8.1",
    "swiper": "^11.1.7",
    "timers": "^0.1.1",
    "typesense": "^2.1.0",
    "uuid": "^10.0.0",
    "xml2js": "^0.6.0",
    "zone.js": "^0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.2.2",
    "@angular/cli": "^20.0.5",
    "@angular/compiler-cli": "^20.3.0",
    "@angular/language-service": "^20.3.0",
    "@types/core-js": "^2.5.5",
    "@types/express": "^4.17.17",
    "@types/node": "^22.12.0",
    "@types/xml2js": "^0.4.9",
    "angular-eslint": "20.3.0",
    "eslint": "^9.35.0",
    "events": "^3.3.0",
    "firebase-tools": "^14.19.1",
    "ng-extract-i18n-merge": "^3.0.0-0",
    "sass": "^1.63.3",
    "schema-dts": "^1.1.5",
    "string_decoder": "^1.3.0",
    "typescript": "5.8.3",
    "typescript-eslint": "8.40.0"
  }
}
