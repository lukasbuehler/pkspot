    "@types/xml2js": "^0.4.9",
    "angular-eslint": "20.3.0",
    "baseline-browser-mapping": "^2.9.6",
    "eslint": "^9.35.0",
    "events": "^3.3.0",
    "firebase-tools": "14.2.1",
    "jsdom": "^27.3.0",
