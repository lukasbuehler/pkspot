{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "pkspot": {
      "root": "",
      "sourceRoot": "src",
      "projectType": "application",
      "prefix": "app",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "i18n": {
        "sourceLocale": {
          "code": "en",
          "subPath": "en"
        },
        "locales": {
          "de": {
            "translation": "src/locale/messages.de.xlf",
            "subPath": "de"
          },
          "de-CH": {
            "translation": "src/locale/messages.de-CH.xlf",
            "subPath": "de-CH"
          },
          "it": {
            "translation": "src/locale/messages.it.xlf",
            "subPath": "it"
          },
          "fr": {
            "translation": "src/locale/messages.fr.xlf",
            "subPath": "fr"
          },
          "es": {
            "translation": "src/locale/messages.es.xlf",
            "subPath": "es"
          },
          "nl": {
            "translation": "src/locale/messages.nl.xlf",
            "subPath": "nl"
          }
        }
      },
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "optimization": {
              "styles": {
                "inlineCritical": false
              }
            },
            "localize": ["en", "de", "de-CH", "it", "fr", "es", "nl"],
            "outputPath": "dist/pkspot",
            "index": "src/index.html",
            "browser": "src/main.ts",
            "polyfills": [
              "zone.js",
              "@angular/localize/init",
              "src/polyfills-node.ts"
            ],
            "tsConfig": "tsconfig.app.json",
            "sourceMap": true,
            "assets": [
              "src/favicon.ico",
              "src/assets",
              "src/manifest.webmanifest",
              "src/robots.txt"
            ],
            "styles": [
              "node_modules/swiper/swiper-bundle.css",
              "node_modules/@videogular/ngx-videogular/fonts/videogular.css",
              "src/theming/m3-theme.scss",
              "src/styles.scss"
            ],
            "scripts": [],
            "allowedCommonJsDependencies": [
              "firebase",
              "@angular/fire",
              "@angular/fire/firestore",
              "dialog-polyfill",
              "xml2js",
              "sax",
              "buffer",
              "typesense"
            ],
            "server": "src/main.server.ts",
            "ssr": {
              "entry": "server.ts"
            }
          },
          "configurations": {
            "dev": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.development.ts"
                }
              ],
              "optimization": false,
              "localize": ["de"],
              "baseHref": "/de/"
            },
            "staging": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.staging.ts"
                }
              ],
              "outputHashing": "all",
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "4mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kb",
                  "maximumError": "4kb"
                }
              ]
            },
            "production": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.production.ts"
                }
              ],
              "optimization": true,

              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "4mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kb",
                  "maximumError": "4kb"
                }
              ]
            },
            "dev-optim": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.development.ts"
                }
              ],
              "optimization": true,
              "sourceMap": false
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "configurations": {
            "dev": {
              "buildTarget": "pkspot:build:dev"
            },
            "staging": {
              "buildTarget": "pkspot:build:staging"
            },
            "production": {
              "buildTarget": "pkspot:build:production"
            },
            "dev-optim": {
              "buildTarget": "pkspot:build:dev-optim"
            }
          },
          "defaultConfiguration": "dev"
        },
        "extract-i18n": {
          "builder": "ng-extract-i18n-merge:ng-extract-i18n-merge",
          "options": {
            "buildTarget": "pkspot:build:dev",
            "format": "xlf2",
            "outputPath": "src/locale",
            "targetFiles": [
              "messages.de.xlf",
              "messages.de-CH.xlf",
              "messages.it.xlf",
              "messages.fr.xlf",
              "messages.es.xlf",
              "messages.nl.xlf"
            ]
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": ["src/**/*.ts", "src/**/*.html"]
          }
        }
      }
    }
  },
  "cli": {
    "analytics": "5ba466b0-10a6-4c49-9de2-9bed548e9520",
    "schematicCollections": ["angular-eslint"]
  },
  "schematics": {
    "@schematics/angular:component": {
      "type": "component"
    },
    "@schematics/angular:directive": {
      "type": "directive"
    },
    "@schematics/angular:service": {
      "type": "service"
    },
    "@schematics/angular:guard": {
      "typeSeparator": "."
    },
    "@schematics/angular:interceptor": {
      "typeSeparator": "."
    },
    "@schematics/angular:module": {
      "typeSeparator": "."
    },
    "@schematics/angular:pipe": {
      "typeSeparator": "."
    },
    "@schematics/angular:resolver": {
      "typeSeparator": "."
    }
  }
}
